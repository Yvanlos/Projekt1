<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.NewDeveloperViewController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Entwickler erstellen">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <Pane prefHeight="30.0" prefWidth="300.0" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name" />
      <TextField fx:id="nameInputField" alignment="CENTER" maxWidth="280.0" prefWidth="280.0" />
      <Pane prefHeight="20.0" prefWidth="300.0" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Entwicklerteam" />
      <ComboBox fx:id="developerTeamComboBox" prefWidth="280.0" />
      <Pane prefHeight="20.0" prefWidth="300.0" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Profilbild auswählen" />
      <Button fx:id="fileChooserButton" mnemonicParsing="false" onMouseClicked="#onFileChooserButtonEvent" prefHeight="20.0" prefWidth="280.0" text="Dateipfad öffnen" />
      <Pane layoutX="10.0" layoutY="122.0" prefHeight="20.0" prefWidth="300.0" />
      <ImageView fx:id="selectedImage" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
      <Pane prefHeight="20.0" prefWidth="80.0" />
      <HBox alignment="CENTER" prefHeight="20.0" prefWidth="200.0">
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onMouseClicked="#onSaveButtonEvent" prefWidth="100.0" text="Speichern" />
            <Pane prefHeight="20.0" prefWidth="80.0" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onMouseClicked="#onCancelButtonEvent" prefWidth="100.0" text="Abbrechen" />
         </children>
      </HBox>
   </children>
</VBox>
