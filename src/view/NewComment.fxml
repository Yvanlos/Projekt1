<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<fx:root prefHeight="480.0" prefWidth="600.0" type="BorderPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <top>
      <HBox alignment="CENTER" prefHeight="30.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Betreff: " />
            <Pane prefHeight="30.0" prefWidth="5.0" />
            <TextField fx:id="inputNameField" />
         </children>
      </HBox>
   </top>
   <bottom>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="30.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="okayButton" fx:id="okayButton" defaultButton="true" mnemonicParsing="false" onMouseClicked="#onOkayButtonClicked" prefHeight="30.0" prefWidth="100.0" text="Okay" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onMouseClicked="#OnCancelButtonClicked" prefHeight="30.0" prefWidth="100.0" text="Abbrechen" />
         </children>
      </HBox>
   </bottom>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <center>
            <TextArea fx:id="inputContentField" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Kommentar:" BorderPane.alignment="CENTER" />
         </top>
      </BorderPane>
   </center>
</fx:root>
